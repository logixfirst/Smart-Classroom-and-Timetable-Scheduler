# SIH28 Timetable Management System - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=True

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================
POSTGRES_DB=sih28
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:password@localhost:5432/sih28

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_SECRET_KEY=django-insecure-change-this-in-production
DJANGO_PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FASTAPI SETTINGS
# =============================================================================
FASTAPI_PORT=8001
FASTAPI_AI_SERVICE_URL=http://localhost:8001

# =============================================================================
# FRONTEND SETTINGS (Next.js)
# =============================================================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001

# =============================================================================
# NGINX SETTINGS
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Upstash Redis (Cloud Redis service)
# UPSTASH_REDIS_URL=rediss://default:your_token@your_host:6379

# Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

# =============================================================================
# DEVELOPMENT VS PRODUCTION
# =============================================================================
# For production, change the following:
# - Set DEBUG=False
# - Generate a new DJANGO_SECRET_KEY
# - Use strong passwords
# - Configure proper ALLOWED_HOSTS and CORS settings
# - Set up SSL certificates for NGINX
# - Use environment-specific Redis and PostgreSQL instances