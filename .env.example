# SIH28 Environment Variables
# Copy this file to .env and update the values

# Environment Mode (development/production)
NODE_ENV=development
DEBUG=True

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001

# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Upstash)
REDIS_URL=redis://localhost:6379/0

# Service Communication
FASTAPI_AI_SERVICE_URL=http://localhost:8001
DJANGO_API_URL=http://localhost:8000

# Docker Ports
DJANGO_PORT=8000
FASTAPI_PORT=8001
FRONTEND_PORT=3000
NGINX_PORT=80

# Production URLs (uncomment for deployment)
# NEXT_PUBLIC_API_URL=https://sih28-django.onrender.com
# NEXT_PUBLIC_FASTAPI_URL=https://sih28-fastapi.onrender.com
# ALLOWED_HOSTS=sih28-django.onrender.com
# CORS_ALLOWED_ORIGINS=https://sih28.vercel.app